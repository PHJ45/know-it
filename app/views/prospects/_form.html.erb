
<div id="prospect-form" class="col-md-6 col-md-offset-3">
   <%= form_tag(prospects_path)  do   %>
    <h1 class="call-to">Income & Savings First...</h1>

    <h3>Total Annual Income?</h3>
    <div class="input-group input-group-lg">
      <span class="input-group-addon">$</span>
        <input type="text" id="annual_income" name="annual_income" class="form-control" required autofocus>
    </div>

    <h3>Savings</h3>
    <div class="input-group input-group-lg">
      <span class="input-group-addon">$</span>
      <input type="text" name="current_savings" class="form-control" required autofocus>
    </div>

    <h3>Saved for Retirement?</h3>
    <div class="input-group input-group-lg">
      <span class="input-group-addon">$</span>
      <input type="text" name="retirement_savings" class="form-control" required autofocus>
    </div>
    
    <br> 
    
    <button class="btn btn-default" id="prospect-btn" type="submit">Submit</button>
  <% end %>  

  <h3 class="call-to"> You should get 

  $<%= number_with_delimiter(@prospect.recommended_insurance, :delimiter => ',') if number_with_delimiter(@prospect.recommended_insurance, :delimiter => ',') %> in life insurance.
  </h3>
</div> <!--END OF PROSPECT FORM  -->

